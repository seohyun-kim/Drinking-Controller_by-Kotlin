<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".AlarmRecord">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/updateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textColor="#FFFFFF" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TableRow
                android:layout_width="313dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/goalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:fontFamily="sans-serif-black"
                    android:text="오늘의 목표량: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/goalText"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text='"사용자 입력값"'
                    tools:fontFamily="sans-serif-black"
                    tools:textSize="18sp" />

            </TableRow>

            <TableRow
                android:layout_width="313dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cumTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:fontFamily="sans-serif-black"
                    android:text="현재 누적량: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/cumData"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text='"블루투스 수신 데이터"'
                    tools:fontFamily="sans-serif-black"
                    tools:textSize="18sp" />


            </TableRow>


            <TableRow
                android:layout_width="313dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/msgTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:fontFamily="sans-serif-black"
                    android:text="메세지: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/msgText"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text='"누적량에 따른 메세지"'
                    tools:fontFamily="sans-serif-black"
                    tools:textSize="18sp" />

            </TableRow>
        </TableLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>